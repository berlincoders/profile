<%= simple_form_for @spaceship do |f| %>
  <%= f.input :name, placeholder: "Your ship's name"%>
  <%= f.input :model, placeholder: "Your ship's model" %>
  <%= f.input :description, placeholder: 'Please tell us more about your ship' %>
  <%= f.input :daily_rate, as: :float, placeholder: 'Please enter your daily rate' %>
  <%= f.button :submit, 'Add' %>
<% end %>
